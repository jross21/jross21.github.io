---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// Only show h2 headings
const tocHeadings = headings.filter((h) => h.depth === 2);
---

{tocHeadings.length > 0 && (
  <nav class="sticky top-24">
    <p class="text-xs font-medium text-[var(--color-text-muted)] uppercase tracking-wide mb-4">
      On this page
    </p>
    <ul class="space-y-2 text-sm">
      {tocHeadings.map((heading) => (
        <li>
          <a
            href={`#${heading.slug}`}
            class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors block py-1"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
