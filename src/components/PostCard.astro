---
interface Props {
  title: string;
  description: string;
  slug: string;
}

const { title, description, slug } = Astro.props;
---

<a
  href={`/thinking/${slug}`}
  class="block py-4 border-b border-[var(--color-border)] hover:no-underline group last:border-b-0 transition-all duration-200 hover:pl-2"
>
  <h3 class="text-base font-medium text-[var(--color-text)] mb-1 group-hover:text-[var(--color-accent)] transition-colors">
    {title}
  </h3>
  <p class="text-sm text-[var(--color-text-muted)]">
    {description}
  </p>
</a>
