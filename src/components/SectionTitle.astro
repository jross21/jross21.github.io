---
interface Props {
  prefix?: string;
  keyword: string;
  suffix?: string;
  accentColor?: 'primary' | 'secondary' | 'warning';
}

const { prefix = '', keyword, suffix = '', accentColor = 'primary' } = Astro.props;

const colorMap = {
  primary: 'var(--color-accent)',
  secondary: 'var(--color-secondary)',
  warning: 'var(--color-warning)',
};
---

<h2 class="section-title">
  {prefix && <span class="prefix">{prefix} </span>}
  <span class="keyword" style={`color: ${colorMap[accentColor]}`}>{keyword}</span>
  {suffix && <span class="suffix"> {suffix}</span>}
</h2>

<style>
  .section-title {
    font-family: var(--font-mono);
    font-size: 1.75rem;
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .prefix, .suffix {
    color: var(--color-text);
  }

  .keyword {
    font-weight: 700;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2.25rem;
    }
  }
</style>
