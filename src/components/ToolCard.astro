---
interface Props {
  title: string;
  description: string;
  slug: string;
  category: string;
  verdict: string;
}

const { title, description, slug, category, verdict } = Astro.props;

const categoryColors: Record<string, string> = {
  data: 'bg-emerald-500/10 text-emerald-600 dark:text-emerald-400',
  ai: 'bg-violet-500/10 text-violet-600 dark:text-violet-400',
  automation: 'bg-amber-500/10 text-amber-600 dark:text-amber-400',
  productivity: 'bg-sky-500/10 text-sky-600 dark:text-sky-400',
};
---

<a
  href={`/tools/${slug}`}
  class="card block p-6 border border-[var(--color-border)] rounded-lg hover:border-[var(--color-accent)]/30 hover:no-underline group bg-[var(--color-bg)]"
>
  <div class="flex items-start justify-between gap-4 mb-3">
    <h3 class="text-lg font-semibold text-[var(--color-text)] group-hover:text-[var(--color-accent)]">
      {title}
    </h3>
    <span class:list={[
      'px-2 py-1 text-xs font-medium rounded capitalize shrink-0',
      categoryColors[category] || 'bg-[var(--color-bg-subtle)] text-[var(--color-text-muted)]'
    ]}>
      {category}
    </span>
  </div>

  <p class="text-[var(--color-text-muted)] text-sm mb-3">
    {description}
  </p>

  <p class="text-sm text-[var(--color-text)] italic">
    "{verdict}"
  </p>
</a>
