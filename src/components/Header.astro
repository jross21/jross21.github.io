---
import ThemeToggle from './ThemeToggle.astro';

const pathname = Astro.url.pathname;

const navItems = [
  { href: '/projects', label: 'Projects' },
  { href: '/thinking', label: 'Writing' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="hidden md:block sticky top-0 z-50 bg-[var(--color-bg)]/90 backdrop-blur-md border-b border-[var(--color-border)]">
  <div class="max-w-[1000px] mx-auto px-6 py-4">
    <nav class="flex items-center justify-between">
      <a href="/" class="text-[var(--color-text)] font-semibold hover:no-underline hover:text-[var(--color-accent)] transition-colors">
        Julian Ross
      </a>

      <div class="flex items-center gap-6">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'text-sm transition-colors hover:no-underline relative',
              pathname.startsWith(item.href)
                ? 'text-[var(--color-text)] font-medium'
                : 'text-[var(--color-text-muted)] hover:text-[var(--color-accent)]'
            ]}
          >
            {item.label}
          </a>
        ))}
        <ThemeToggle />
      </div>
    </nav>
  </div>
</header>
