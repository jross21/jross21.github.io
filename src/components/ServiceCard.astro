---
interface Props {
  title: string;
  description: string;
  slug: string;
  order?: number;
}

const { title, description, slug } = Astro.props;
---

<a
  href={`/services/${slug}`}
  class="block p-6 border border-[var(--color-border)] rounded-lg hover:border-[var(--color-text-muted)] transition-colors hover:no-underline group"
>
  <h3 class="text-lg font-semibold text-[var(--color-text)] mb-2 group-hover:text-[var(--color-accent)]">
    {title}
  </h3>
  <p class="text-[var(--color-text-muted)] text-sm mb-4">
    {description}
  </p>
  <span class="text-sm text-[var(--color-accent)]">
    Learn more &rarr;
  </span>
</a>
