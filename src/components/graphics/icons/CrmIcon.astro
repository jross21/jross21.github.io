---
/**
 * CrmIcon - CRM/contacts database icon
 */
interface Props {
  size?: number;
  class?: string;
}

const { size = 20, class: className = '' } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={['icon', className]}
  aria-hidden="true"
>
  <!-- Card/contact background -->
  <rect x="3" y="4" width="18" height="16" rx="2" stroke="currentColor" stroke-width="2" fill="none"/>
  <!-- Person avatar -->
  <circle cx="9" cy="10" r="2.5" fill="currentColor" opacity="0.8"/>
  <path d="M5 16C5 14 6.5 13 9 13C11.5 13 13 14 13 16" stroke="currentColor" stroke-width="1.5" fill="none" opacity="0.6"/>
  <!-- Contact lines -->
  <line x1="15" y1="9" x2="19" y2="9" stroke="currentColor" stroke-width="2" stroke-linecap="round" opacity="0.5"/>
  <line x1="15" y1="13" x2="19" y2="13" stroke="currentColor" stroke-width="2" stroke-linecap="round" opacity="0.5"/>
</svg>

<style>
  .icon {
    color: var(--color-accent);
    flex-shrink: 0;
  }
</style>
