---
/**
 * ChartIcon - Bar chart icon for statistics/metrics
 */
interface Props {
  size?: number;
  class?: string;
}

const { size = 20, class: className = '' } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={['icon', className]}
  aria-hidden="true"
>
  <rect x="4" y="14" width="4" height="6" rx="1" fill="currentColor" opacity="0.6"/>
  <rect x="10" y="8" width="4" height="12" rx="1" fill="currentColor" opacity="0.8"/>
  <rect x="16" y="4" width="4" height="16" rx="1" fill="currentColor"/>
</svg>

<style>
  .icon {
    color: var(--color-accent);
    flex-shrink: 0;
  }
</style>
