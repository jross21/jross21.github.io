---
/**
 * TargetIcon - Crosshair/target icon for goals and objectives
 */
interface Props {
  size?: number;
  class?: string;
}

const { size = 20, class: className = '' } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={['icon', className]}
  aria-hidden="true"
>
  <circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="2" fill="none" opacity="0.4"/>
  <circle cx="12" cy="12" r="5" stroke="currentColor" stroke-width="2" fill="none" opacity="0.7"/>
  <circle cx="12" cy="12" r="2" fill="currentColor"/>
</svg>

<style>
  .icon {
    color: var(--color-accent);
    flex-shrink: 0;
  }
</style>
