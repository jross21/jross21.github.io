---
/**
 * CalendarIcon - Calendar icon for dates/scheduling
 */
interface Props {
  size?: number;
  class?: string;
}

const { size = 20, class: className = '' } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={['icon', className]}
  aria-hidden="true"
>
  <!-- Calendar body -->
  <rect x="3" y="5" width="18" height="16" rx="2" stroke="currentColor" stroke-width="2" fill="none"/>
  <!-- Header bar -->
  <rect x="3" y="5" width="18" height="5" rx="2" fill="currentColor" opacity="0.3"/>
  <!-- Top hooks -->
  <line x1="8" y1="3" x2="8" y2="7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  <line x1="16" y1="3" x2="16" y2="7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  <!-- Date dots -->
  <circle cx="8" cy="14" r="1.5" fill="currentColor" opacity="0.6"/>
  <circle cx="12" cy="14" r="1.5" fill="currentColor"/>
  <circle cx="16" cy="14" r="1.5" fill="currentColor" opacity="0.6"/>
</svg>

<style>
  .icon {
    color: var(--color-accent);
    flex-shrink: 0;
  }
</style>
