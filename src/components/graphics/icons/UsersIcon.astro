---
/**
 * UsersIcon - Multiple users icon for team/collaboration
 */
interface Props {
  size?: number;
  class?: string;
}

const { size = 20, class: className = '' } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={['icon', className]}
  aria-hidden="true"
>
  <!-- Front person (larger) -->
  <circle cx="9" cy="8" r="3" fill="currentColor"/>
  <path d="M3 20C3 16.134 5.686 14 9 14C12.314 14 15 16.134 15 20" stroke="currentColor" stroke-width="2" fill="none"/>

  <!-- Back person (smaller, offset) -->
  <circle cx="16" cy="7" r="2.5" fill="currentColor" opacity="0.6"/>
  <path d="M12 19C12 16 14 14.5 16 14.5C18 14.5 20 16 20 19" stroke="currentColor" stroke-width="2" fill="none" opacity="0.6"/>
</svg>

<style>
  .icon {
    color: var(--color-accent);
    flex-shrink: 0;
  }
</style>
