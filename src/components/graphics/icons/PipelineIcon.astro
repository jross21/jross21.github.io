---
/**
 * PipelineIcon - Sales/data pipeline funnel icon
 */
interface Props {
  size?: number;
  class?: string;
}

const { size = 20, class: className = '' } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class:list={['icon', className]}
  aria-hidden="true"
>
  <!-- Funnel shape -->
  <path
    d="M3 4H21L15 12V19L9 21V12L3 4Z"
    stroke="currentColor"
    stroke-width="2"
    fill="none"
  />
  <!-- Flow indicators -->
  <circle cx="12" cy="7" r="1.5" fill="currentColor" opacity="0.6"/>
  <circle cx="12" cy="11" r="1" fill="currentColor" opacity="0.8"/>
  <circle cx="12" cy="15" r="0.75" fill="currentColor"/>
</svg>

<style>
  .icon {
    color: var(--color-accent);
    flex-shrink: 0;
  }
</style>
