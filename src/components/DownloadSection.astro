---
interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title = 'Get in Touch',
  description = 'Want to compare notes on revenue systems and AI automation?',
  ctaText = 'Start a conversation',
  ctaHref = '/contact'
} = Astro.props;
---

<div class="terminal-panel">
  <div class="terminal-panel__header">
    <span class="terminal-panel__title">{title}</span>
  </div>
  <div class="terminal-panel__body">
    <div class="text-sm space-y-3">
      <div class="text-[var(--color-text-muted)]">{description}</div>
      <div class="pt-2">
        <a
          href={ctaHref}
          class="cmd-button cmd-button--primary"
        >
          {ctaText}
        </a>
      </div>
    </div>
  </div>
</div>
