---
/**
 * ScrollToTop.astro
 *
 * Floating button that appears after 500px scroll.
 * Terminal-styled with monospace arrow and accent border.
 */
---

<button
  id="scroll-to-top"
  class="scroll-to-top"
  aria-label="Scroll to top"
  title="Back to top"
>
  <span class="scroll-to-top__arrow">&uarr;</span>
</button>

<style>
  .scroll-to-top {
    position: fixed;
    bottom: 5rem;
    right: 1.5rem;
    z-index: 40;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-bg-subtle);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    color: var(--color-text-muted);
    cursor: pointer;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.2s ease, transform 0.2s ease, border-color 0.2s ease, color 0.2s ease;
    pointer-events: none;
  }

  .scroll-to-top.is-visible {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .scroll-to-top:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .scroll-to-top__arrow {
    font-family: var(--font-mono);
    font-size: 1rem;
    font-weight: 600;
    line-height: 1;
  }

  @media (min-width: 768px) {
    .scroll-to-top {
      bottom: 2rem;
    }
  }
</style>

<script>
  function initScrollToTop() {
    const btn = document.getElementById('scroll-to-top');
    if (!btn) return;

    function handleScroll() {
      if (window.scrollY > 500) {
        btn.classList.add('is-visible');
      } else {
        btn.classList.remove('is-visible');
      }
    }

    window.addEventListener('scroll', handleScroll, { passive: true });
    handleScroll();

    btn.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollToTop);
  } else {
    initScrollToTop();
  }

  document.addEventListener('astro:page-load', initScrollToTop);
</script>
