---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TerminalProjectCard from '../../components/TerminalProjectCard.astro';
import { getCollection } from 'astro:content';

const allWork = await getCollection('work');
const curatedGroups = [
  {
    title: 'AI & Automation',
    slugs: ['agentic-workflow-revops', 'ai-routing-sla'],
  },
  {
    title: 'Systems & Operations',
    slugs: ['data-governance-automation', 'forecast-integrity-cadence', 'scaling-revenue-stack', 'self-serve-analytics'],
  },
];
const workBySlug = new Map(allWork.map((project) => [project.slug, project]));
const groupedWork = curatedGroups.map((group) => ({
  title: group.title,
  projects: group.slugs
    .map((slug) => workBySlug.get(slug))
    .filter((project): project is typeof allWork[number] => Boolean(project)),
}));
---

<BaseLayout title="Projects" description="Approaches and patterns from implementations I've led.">
  <article class="py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-2xl md:text-3xl font-bold text-[var(--color-text)] mb-4">
        Projects
      </h1>

      <p class="text-[var(--color-text-muted)] max-w-2xl">
        Approaches and patterns from systems I've led across RevOps and GTM.
      </p>
    </div>

    <!-- Projects list -->
    <div class="space-y-10">
      {groupedWork.map((group) => (
        group.projects.length > 0 && (
          <section class="space-y-4">
            <h2 class="text-xl md:text-2xl font-semibold text-[var(--color-text)]">
              {group.title}
            </h2>
            <div class="max-w-3xl pl-4 md:pl-6 border-l border-[var(--color-border)]">
              {group.projects.map((project) => (
                <TerminalProjectCard
                  title={project.data.title}
                  description={project.data.description}
                  slug={project.slug}
                  date={project.data.date}
                />
              ))}
            </div>
          </section>
        )
      ))}
    </div>

    <!-- Empty state -->
    {allWork.length === 0 && (
      <div class="terminal-panel">
        <div class="terminal-panel__body text-sm text-[var(--color-text-muted)]">
          No projects found.
        </div>
      </div>
    )}
  </article>
</BaseLayout>
