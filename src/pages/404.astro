---
import BaseLayout from '../layouts/BaseLayout.astro';
import TerminalPanel from '../components/TerminalPanel.astro';
import CommandButton from '../components/CommandButton.astro';
---

<BaseLayout title="404 - Not Found">
  <article class="py-16 md:py-24">
    <div class="max-w-xl mx-auto">
      <TerminalPanel title="Page not found">
        <div class="text-center py-8">
          <div class="text-6xl font-bold text-[var(--color-error)] mb-4">404</div>

          <div class="text-[var(--color-text-muted)] mb-8">
            The page you’re looking for doesn’t exist.
          </div>

          <div class="flex flex-wrap justify-center gap-3">
            <CommandButton
              href="/"
              command="Home"
              primary={true}
            />
            <CommandButton
              href="/projects"
              command="Projects"
            />
            <CommandButton
              href="/contact"
              command="Contact"
            />
          </div>
        </div>
      </TerminalPanel>
    </div>
  </article>
</BaseLayout>
