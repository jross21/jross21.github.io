---
import BaseLayout from '../layouts/BaseLayout.astro';
import TerminalPanel from '../components/TerminalPanel.astro';
import CommandButton from '../components/CommandButton.astro';
---

<BaseLayout title="Contact" description="Get in touch â€” email, LinkedIn, or download my resume.">
  <article class="py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-2xl md:text-3xl font-bold text-[var(--color-text)] mb-4">
        Contact
      </h1>

      <p class="text-[var(--color-text-muted)] max-w-lg">
        Interested in connecting about RevOps, Sales Ops, or Marketing Ops roles? I'd love to hear from you.
      </p>
    </div>

    <div class="max-w-xl space-y-6">

      <!-- Resume -->
      <TerminalPanel title="Resume">
        <div class="flex items-center justify-between">
          <p class="text-sm text-[var(--color-text-muted)]">Full career history and skills</p>
          <CommandButton
            href="/julian-ross-resume.pdf"
            command="View resume"
            primary={true}
            section="about"
          />
        </div>
      </TerminalPanel>

      <!-- Direct Contact -->
      <TerminalPanel title="Get in touch">
        <div class="space-y-4">
          <a
            href="mailto:jross21@gmail.com"
            class="flex items-center justify-between py-2 text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors hover:no-underline group"
          >
            <div>
              <div class="text-sm font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)]">Email</div>
              <div class="text-xs text-[var(--color-text-dim)]">jross21@gmail.com</div>
            </div>
            <span class="text-xs text-[var(--color-text-dim)]">&rarr;</span>
          </a>

          <div class="border-t border-[var(--color-border)]"></div>

          <a
            href="https://www.linkedin.com/in/julianross21/"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-between py-2 text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors hover:no-underline group"
          >
            <div>
              <div class="text-sm font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)]">LinkedIn</div>
              <div class="text-xs text-[var(--color-text-dim)]">linkedin.com/in/julianross21</div>
            </div>
            <span class="text-xs text-[var(--color-text-dim)]">&rarr;</span>
          </a>

          <div class="border-t border-[var(--color-border)]"></div>

          <a
            href="https://github.com/jross21"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-between py-2 text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors hover:no-underline group"
          >
            <div>
              <div class="text-sm font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)]">GitHub</div>
              <div class="text-xs text-[var(--color-text-dim)]">github.com/jross21</div>
            </div>
            <span class="text-xs text-[var(--color-text-dim)]">&rarr;</span>
          </a>
        </div>
      </TerminalPanel>

    </div>
  </article>
</BaseLayout>
