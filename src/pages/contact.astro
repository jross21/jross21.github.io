---
import BaseLayout from '../layouts/BaseLayout.astro';
import CommandButton from '../components/CommandButton.astro';
---

<BaseLayout title="Contact" description="Get in touch â€” email, LinkedIn, or download my resume.">
  <article class="py-8" data-section="contact">
    <div class="max-w-lg">
      <h1 class="text-2xl md:text-3xl text-[var(--color-text)] mb-4">
        Contact
      </h1>

      <p class="text-lg text-[var(--color-text-muted)] leading-relaxed mb-8">
        Best way to reach me is email. I read everything and reply within a day.
      </p>

      <!-- Email prominent -->
      <div class="mb-8">
        <a
          href="mailto:jross21@gmail.com"
          class="text-xl text-[var(--color-text)] hover:text-[var(--color-accent)] transition-colors font-semibold"
        >
          jross21@gmail.com
        </a>
      </div>

      <!-- Links -->
      <div class="space-y-4 mb-8">
        <a
          href="https://www.linkedin.com/in/julianross21/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-between py-3 border-b border-[var(--color-border)] text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors hover:no-underline group"
        >
          <div>
            <div class="text-sm font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)]">LinkedIn</div>
            <div class="text-xs text-[var(--color-text-dim)]">linkedin.com/in/julianross21</div>
          </div>
          <span class="text-xs text-[var(--color-text-dim)]">&rarr;</span>
        </a>

        <a
          href="https://github.com/jross21"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-between py-3 border-b border-[var(--color-border)] text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors hover:no-underline group"
        >
          <div>
            <div class="text-sm font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)]">GitHub</div>
            <div class="text-xs text-[var(--color-text-dim)]">github.com/jross21</div>
          </div>
          <span class="text-xs text-[var(--color-text-dim)]">&rarr;</span>
        </a>
      </div>

      <!-- Resume CTA -->
      <CommandButton
        href="/resume"
        command="View resume"
        primary={true}
        section="about"
      />
    </div>
  </article>
</BaseLayout>
