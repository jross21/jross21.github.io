---
import BaseLayout from '../layouts/BaseLayout.astro';
import TerminalPanel from '../components/TerminalPanel.astro';
import CommandButton from '../components/CommandButton.astro';
---

<BaseLayout title="Contact" description="Reach out to discuss RevOps systems and GTM automation.">
  <article class="py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-2xl md:text-3xl font-bold text-[var(--color-text)] mb-4">
        Contact
      </h1>

      <p class="text-[var(--color-text-muted)]">
        Leading a RevOps team or modernizing GTM operations? Let's connect.
      </p>

      <div class="mt-3 text-sm text-[var(--color-text-muted)]">
        Prefer email? <a href="mailto:jross21@gmail.com">jross21@gmail.com</a>
      </div>
    </div>

    <div class="lg:grid lg:grid-cols-[1fr_300px] lg:gap-8">
      <!-- Form -->
      <TerminalPanel title="Message" class="mb-8 lg:mb-0">
        <form
          action="https://formsubmit.co/jross21@gmail.com"
          method="POST"
          class="space-y-5"
        >
          <input type="hidden" name="_subject" value="New message from jross21.github.io" />
          <input type="hidden" name="_captcha" value="false" />
          <div>
            <label for="name" class="block text-sm text-[var(--color-text-muted)] mb-2">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              placeholder="Your name"
              class="w-full px-4 py-3 bg-[var(--color-bg)] border border-[var(--color-border)] rounded-lg text-[var(--color-text)] focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] focus:border-transparent placeholder:text-[var(--color-text-dim)]"
            />
          </div>

          <div>
            <label for="email" class="block text-sm text-[var(--color-text-muted)] mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="you@example.com"
              class="w-full px-4 py-3 bg-[var(--color-bg)] border border-[var(--color-border)] rounded-lg text-[var(--color-text)] focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] focus:border-transparent placeholder:text-[var(--color-text-dim)]"
            />
          </div>

          <div>
            <label for="message" class="block text-sm text-[var(--color-text-muted)] mb-2">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              placeholder="Tell me about the team or system you're building..."
              class="w-full px-4 py-3 bg-[var(--color-bg)] border border-[var(--color-border)] rounded-lg text-[var(--color-text)] focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] focus:border-transparent resize-none placeholder:text-[var(--color-text-dim)]"
            ></textarea>
          </div>

          <CommandButton
            command="Send message"
            primary={true}
            type="submit"
          />
        </form>
      </TerminalPanel>

      <!-- Sidebar -->
      <aside class="space-y-6">
        <TerminalPanel title="Direct">
          <div class="text-sm space-y-3">
            <div class="text-[var(--color-text-dim)]">Or reach out directly</div>
            <div class="space-y-2">
              <a
                href="mailto:jross21@gmail.com"
                class="flex items-center gap-2 text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors hover:no-underline"
              >
                Email
              </a>
              <a
                href="https://www.linkedin.com/in/julianross21/"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors hover:no-underline"
              >
                LinkedIn
              </a>
              <a
                href="https://github.com/jross21"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors hover:no-underline"
              >
                GitHub
              </a>
            </div>
          </div>
        </TerminalPanel>

        <TerminalPanel title="Response time">
          <div class="text-sm">
            <div class="text-[var(--color-text-dim)]">Typical response</div>
            <div class="text-[var(--color-accent)]">&lt; 24 hours</div>
          </div>
        </TerminalPanel>
      </aside>
    </div>
  </article>
</BaseLayout>
