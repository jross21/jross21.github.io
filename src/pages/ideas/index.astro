---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TerminalPostCard from '../../components/TerminalPostCard.astro';
import { getCollection } from 'astro:content';

const allWriting = await getCollection('writing');
const curatedGroups = [
  {
    title: 'AI Adoption',
    slugs: ['ai-project-will-fail', 'what-agentic-means', 'hitl-design-patterns'],
  },
  {
    title: 'Go-to-Market',
    slugs: ['distribution-bottleneck', 'machine-customers'],
  },
  {
    title: 'Operations',
    slugs: ['frequency-pain-matrix', 'revops-tech-debt', 'crm-as-headless-cms', 'cpq-governance'],
  },
];
// Build read time map
const readTimeBySlug = new Map(allWriting.map((post) => {
  const wordCount = (post.body || '').split(/\s+/).length;
  return [post.slug, Math.max(1, Math.round(wordCount / 230))];
}));
const writingBySlug = new Map(allWriting.map((post) => [post.slug, post]));
const groupedWriting = curatedGroups.map((group) => ({
  title: group.title,
  posts: group.slugs
    .map((slug) => writingBySlug.get(slug))
    .filter((post): post is typeof allWriting[number] => Boolean(post)),
}));
---

<BaseLayout title="Ideas" description="Essays on RevOps, AI adoption, and why most automation projects fail.">
  <article class="py-8">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-2xl md:text-3xl font-bold text-[var(--color-text)] mb-4">
        Ideas
      </h1>

      <p class="text-[var(--color-text-muted)] max-w-2xl">
        Curated essays grouped by theme.
      </p>
    </div>

    <!-- Posts list -->
    <div class="space-y-16">
      {groupedWriting.map((group) => (
        group.posts.length > 0 && (
          <section class="ideas-category">
            <div class="ideas-category__header">
              <h2 class="ideas-category__title">
                {group.title}
              </h2>
              <span class="ideas-category__count">
                {group.posts.length} {group.posts.length === 1 ? 'article' : 'articles'}
              </span>
            </div>
            <div class="ideas-category__cards">
              {group.posts.map((post) => (
                <TerminalPostCard
                  title={post.data.title}
                  description={post.data.description}
                  slug={post.slug}
                  readTime={readTimeBySlug.get(post.slug)}
                />
              ))}
            </div>
          </section>
        )
      ))}
    </div>

    <!-- Empty state -->
    {allWriting.length === 0 && (
      <div class="terminal-panel">
        <div class="terminal-panel__body text-sm text-[var(--color-text-muted)]">
          No posts found.
        </div>
      </div>
    )}
  </article>
</BaseLayout>

<style>
  .ideas-category {
    /* Category section container */
  }

  .ideas-category__header {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-accent);
  }

  .ideas-category__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  @media (min-width: 768px) {
    .ideas-category__title {
      font-size: 1.5rem;
    }
  }

  .ideas-category__count {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-accent);
    background-color: var(--color-accent-dim);
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  :global(html.light) .ideas-category__count {
    background-color: var(--color-accent-dim);
    color: var(--color-accent);
  }

  .ideas-category__cards {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
