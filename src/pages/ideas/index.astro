---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TerminalBreadcrumb from '../../components/TerminalBreadcrumb.astro';
import TerminalPostCard from '../../components/TerminalPostCard.astro';
import { getCollection } from 'astro:content';

const allWriting = await getCollection('writing');
const curatedGroups = [
  {
    title: 'AI & GTM',
    slugs: ['ai-project-will-fail', 'what-agentic-means', 'distribution-bottleneck', 'machine-customers'],
  },
  {
    title: 'Operations',
    slugs: ['revops-tech-debt', '2026-revops'],
  },
];
const writingBySlug = new Map(allWriting.map((post) => [post.slug, post]));
const groupedWriting = curatedGroups.map((group) => ({
  title: group.title,
  posts: group.slugs
    .map((slug) => writingBySlug.get(slug))
    .filter((post): post is typeof allWriting[number] => Boolean(post)),
}));
---

<BaseLayout title="Ideas" description="Essays on RevOps, AI adoption, and why most automation projects fail.">
  <article class="py-8">
    <!-- Breadcrumb -->
    <TerminalBreadcrumb items={[{ label: 'ideas' }]} section="ideas" />

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-2xl md:text-3xl font-bold text-[var(--color-text)] mb-4">
        Ideas
      </h1>

      <p class="text-[var(--color-text-muted)] max-w-2xl">
        Curated essays grouped by theme.
      </p>
    </div>

    <!-- Posts list -->
    <div class="space-y-10">
      {groupedWriting.map((group) => (
        group.posts.length > 0 && (
          <section class="space-y-4">
            <h2 class="text-xl md:text-2xl font-semibold text-[var(--color-text)]">
              {group.title}
            </h2>
            <div class="max-w-3xl pl-4 md:pl-6 border-l border-[var(--color-border)]">
              {group.posts.map((post) => (
                <TerminalPostCard
                  title={post.data.title}
                  description={post.data.description}
                  slug={post.slug}
                />
              ))}
            </div>
          </section>
        )
      ))}
    </div>

    <!-- Empty state -->
    {allWriting.length === 0 && (
      <div class="terminal-panel">
        <div class="terminal-panel__body text-sm text-[var(--color-text-muted)]">
          No posts found.
        </div>
      </div>
    )}
  </article>
</BaseLayout>
